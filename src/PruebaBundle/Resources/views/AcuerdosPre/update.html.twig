			}else if("{{arit.nombre}}" == 'OTROS' && "{{arit.tipo}}" == '1' && "{{arit.baja}}" == '1'){

				$("#areaIpd").append("<option data-option='{{arit.nombre}}' value={{arit.id}}>{{arit.personaResponsable}}</option>");
