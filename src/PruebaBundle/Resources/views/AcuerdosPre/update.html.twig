			function postEditAcuerdosPre(){

				datos={

					comite: $("#comite").val(),
					fecha: $("#fecha").val(),
					acuerdos: $("#acuerdos").val(),
					nroAcuerdo: $("#nroAcuerdo").val(),
					areaIpd: $("#areaIpd").val(),
					estado: $("#estado").val(),
					areasIpdInicio: arrAreasIpd,
					observaciones: $("#observaciones").val(),
					plazoEntrega: $("#plazoEntrega").val()

				}


