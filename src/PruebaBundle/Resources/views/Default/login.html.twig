

{% extends '::base.html.twig'  %}


{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div   >

    <div class="container" style="background-color:red;  background-size:cover;  background-repeat: no-repeat;  background-position: center center;  background-image: url( {{ asset('img/login_imagen4.jpg') }} );  margin:0;  height:100vh; width:100%;">


        <div class="row"  style="margin-top:100px;">
            <div class="col-sm-6 col-md-4 col-md-offset-4"   >
                <div class="panel panel-default"  style="background-color:  rgba(255, 255, 255, 0.4);">
                    <div class="panel-heading">
                        <strong> Sign in para continuar</strong>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path('prueba_login') }}" method="post">
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <img class="profile-img"
                                            src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span> 
                                                    <input class="form-control" placeholder="Username" autofocus type="text" id="username" name="_username" value="{{ last_username }}" />

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </span>
                                                <input  class="form-control" placeholder="Password" type="password" id="password" name="_password" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-ipd btn-block" value="Sign in">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



{% endblock %}
