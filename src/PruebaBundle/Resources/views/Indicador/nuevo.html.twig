
{% extends '::base.html.twig'  %}


{% block body %}


    <nav class="navbar navbar-inverse">

      	<div class="container-fluid">

            <div class="navbar-header">
                <a class="navbar-brand" href="/"><i class="fa fa-flag" aria-hidden="true" style="margin-right:10px;"></i>{{app.user.areaIpd}}</a>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
            <ul class="nav navbar-nav"  id="menu-inicio" >
              <li ><a href="{{path('prueba_verDetalleIndicador')}}">Tablero Control</a></li>
              <li class="active" ><a href="{{path('prueba_formIndicador')}}">Indicador</a></li>
              <li ><a href="{{path('prueba_leyenda')}}">Leyenda</a></li>
            </ul>
        	{% endif %}
        	
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#"><span class="glyphicon glyphicon-user"></span> {{app.user.username}}</a></li>
              <li><a href="{{path('prueba_logout')}}"><span class="glyphicon glyphicon-log-in"></span> Salir</a></li>
            </ul>

      	</div>

    </nav>

	<h1>Indicadores</h1>

	<br>
	{{form(form)}}
	<br>

	{{dump(indicadores)}}

	<table id="example" class="table  table-striped table-bordered" cellspacing="0" width="100%">

		<thead>
			<tr>
				<th>Id indicador</th>
				<th>Area Ipd</th>
				<th>Nombre</th>
			</tr>
		</thead>

		<tbody>
		{% for indicador in indicadores  %}

			<tr>
				<td>{{indicador.id}}</td>
				<td>{{indicador.areaIpd}}</td>
				<td>{{indicador.nombre}}</td>
			</tr>


		{% endfor %}
		</tbody>
	</table>


	<script type="text/javascript">

	        $("#menu-inicio li:nth-child(2)").on('click',function(){

            $("#menu-inicio li:nth-child(1)").removeClass("active");
            $("#menu-inicio li:nth-child(3)").removeClass("active");
            $(this).addClass("active");

            alert("indicador");
        });





	</script>



{% endblock %}

